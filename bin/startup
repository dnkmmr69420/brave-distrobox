#!/bin/bash

GUMREADVAR=$(gum choose "brave stable" "brave beta" "brave nightly" "update system" "shell" "exit to host")

if [ "$GUMREADVAR" = "brave stable" ];
then
  /usr/bin/brave-browser-stable
  exec startup
fi


if [ "$GUMREADVAR" = "brave beta" ];
then
  /usr/bin/brave-browser-beta
  exec startup
fi

if [ "$GUMREADVAR" = "brave nightly" ];
then
  /usr/bin/brave-browser-nightly
  exec startup
fi

if [ "$GUMREADVAR" = "update system" ];
then
  sudo dnf upgrade -y
  exec startup
fi


if [ "$GUMREADVAR" = "shell" ];
then
  /bin/bash
  exec startup
fi

if [ "$GUMREADVAR" = "exit to host" ];
then
  exit
fi
